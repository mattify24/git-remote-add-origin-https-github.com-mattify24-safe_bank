{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"      // Your TypeScript source files
  ],
  "exclude": [
    "node_modules",     // Exclude node_modules
    "dist"              // Exclude dist folder from compilation
  ]
}